<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttachedPronounsFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Singular"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Dual"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Plural"
                android:textSize="16sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:gravity="start"
                android:padding="5dp"
                android:text="1st"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ـِي"
                android:textSize="30sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ـنَا"
                android:textSize="30sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ـنَا"
                android:textSize="30sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:gravity="start"
                android:padding="5dp"
                android:text="2nd (m)"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ـكَ"
                android:textSize="30sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ـكُمَا"
                android:textSize="30sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ـكُمْ"
                android:textSize="30sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:gravity="start"
                android:padding="5dp"
                android:text="2nd (f)"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ـكِ"
                android:textSize="30sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ـكُمَا"
                android:textSize="30sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ـكُنَّ"
                android:textSize="30sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:gravity="start"
                android:padding="5dp"
                android:text="3rd (m)"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ـهُ"
                android:textSize="30sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ـهُمَا"
                android:textSize="30sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ـهُمْ"
                android:textSize="30sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:gravity="start"
                android:padding="5dp"
                android:text="3rd (f)"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ـهَا"
                android:textSize="30sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ـهُمَا"
                android:textSize="30sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ـهُنَّ"
                android:textSize="30sp" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>